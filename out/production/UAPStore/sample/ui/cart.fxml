<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ui.CartController">
   <top>
      <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="48.0" spacing="10.0" style="-fx-background-color: f1f1f1;" BorderPane.alignment="CENTER">
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
         <children>
            <Label text="Cart">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Separator maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" visible="false" HBox.hgrow="ALWAYS" />
            <Button fx:id="homeButton" mnemonicParsing="false" text="Home" />
            <Button fx:id="logOutButton" layoutX="720.0" layoutY="21.0" mnemonicParsing="false" text="Log Out" />
         </children>
      </HBox>
   </top>
   <right>
      <VBox fx:id="detailsMenu" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" prefWidth="200.0" spacing="10.0" style="-fx-border-color: #c1c1c1; -fx-background-color: #fff;" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Product details" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <ListView fx:id="detailsListView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
            <VBox spacing="10.0">
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Quantity" HBox.hgrow="ALWAYS" />
                        <Button fx:id="decreaseButton" mnemonicParsing="false" text="-" />
                        <TextField fx:id="quantityField" alignment="CENTER" editable="false" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="56.0" HBox.hgrow="NEVER">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <Button fx:id="increaseButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="+" />
                     </children>
                  </HBox>
                  <Button fx:id="removeItemButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Remove from Cart" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </right>
   <bottom>
      <Pane maxWidth="1.7976931348623157E308" prefHeight="100.0" style="-fx-background-color: #fff;" BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <TableView fx:id="cartListTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="productId" maxWidth="60000.0" prefWidth="-1.0" text="Id" />
            <TableColumn fx:id="productName" maxWidth="60000.0" prefWidth="144.0" text="Name" />
            <TableColumn fx:id="productCategory" maxWidth="60000.0" prefWidth="-1.0" text="Category" />
            <TableColumn fx:id="productQuantity" maxWidth="60000.0" prefWidth="-1.0" text="Quantity" />
            <TableColumn fx:id="productPrice" maxWidth="60000.0" prefWidth="-1.0" text="Total Price (Tk)" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
